{
  "env": {
    "browser": true,
    "es2022": true,
    "webextensions": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "prefer-const": "error",
    "no-var": "error",
    "no-unused-vars": "error"
  },
  "globals": {
    "chrome": "readonly"
  }
}